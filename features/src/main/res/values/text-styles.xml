<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- Base app text styles -->
    <style name="Widget.App.TextView" parent="Widget.Core.TextView">
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="Widget.App.TextView.400" parent="Widget.App.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Widget.App.TextView.500" parent="Widget.App.TextView">
        <item name="android:fontFamily">@font/open_sans_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Widget.App.TextView.600" parent="Widget.App.TextView">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Widget.App.TextView.700" parent="Widget.App.TextView">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!-- Customize your style here -->
    <style name="Widget.App.TextView.Heading1" parent="Widget.App.TextView.700">
        <item name="android:textColor">@color/color_heading1</item>
        <item name="android:textSize">@dimen/_45sp</item>
    </style>

    <style name="Widget.App.TextView.Heading2" parent="Widget.App.TextView.700">
        <item name="android:textColor">@color/color_heading2</item>
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="Widget.App.TextView.Heading3" parent="Widget.App.TextView.700">
        <item name="android:textColor">@color/color_heading3</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.App.TextView.Heading4" parent="Widget.App.TextView.600">
        <item name="android:textColor">@color/color_heading4</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="Widget.App.TextView.Heading5" parent="Widget.App.TextView.500">
        <item name="android:textColor">@color/color_heading5</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Widget.App.TextView.Heading6" parent="Widget.App.TextView.500">
        <item name="android:textColor">@color/color_heading6</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="Widget.App.TextView.Heading7" parent="Widget.App.TextView.500">
        <item name="android:textColor">@color/color_heading7</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <color name="color_heading1">#151515</color>
    <color name="color_heading2">#173460</color>
    <color name="color_heading3">#173460</color>
    <color name="color_heading4">#151515</color>
    <color name="color_heading5">#2B63B6</color>
    <color name="color_heading6">#173460</color>
    <color name="color_heading7">#93A5BD</color>

    <color name="color_text">#2B63B6</color>

</resources>

